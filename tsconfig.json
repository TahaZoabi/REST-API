{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",                         /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                        /* Specify module code generation: 'commonjs' for Node.js */
    "moduleResolution": "node",                  /* Ensures proper resolution of modules */
    "esModuleInterop": true,                     /* Allows default import syntax for CommonJS modules */
    "skipLibCheck": true,                        /* Skip type checking of all declaration files */
    "forceConsistentCasingInFileNames": true,    /* Ensure consistent casing for file names in imports */

    /* Emit */
    "outDir": "./dist",                          /* Output directory for compiled JavaScript */
    "sourceMap": true,                           /* Generates source maps for debugging */
    "removeComments": true,                      /* Removes comments in the output */

    /* Type Checking */
    "strict": true,                              /* Enable all strict type checking options */
    "noImplicitAny": true,                       /* Report an error on expressions with an 'any' type */
    "strictNullChecks": true,                    /* Enable strict checking of null and undefined */
    //"noUnusedLocals": true,                      /* Report unused local variables */
    //"noUnusedParameters": true,                  /* Report unused function parameters */
    "noImplicitReturns": true,                   /* Ensure every function has a return value or an explicit `void` */
    "noFallthroughCasesInSwitch": true,          /* Ensure no fallthrough cases in switch statements */

    /* Other Options */
    "resolveJsonModule": true,                   /* Allow importing JSON modules */
    "allowJs": true,                             /* Allow JavaScript files in the project */

    /* Advanced Features */
    "isolatedModules": true,                     /* Ensures that each file can be transpiled independently */
    "skipDefaultLibCheck": true                  /* Skip default library type checking for faster compilation */
  },
  "include": [
    "src/**/*.ts"                               /* Include all TypeScript files in the 'src' folder */
  ],
  "exclude": [
    "node_modules"                              /* Exclude the 'node_modules' folder from compilation */
  ]
}
